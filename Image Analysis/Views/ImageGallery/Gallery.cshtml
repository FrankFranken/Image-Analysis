@model List<Image_Analysis.ImageGallery>

@{
    ViewBag.Title = "Gallery";
}

<h2>Image Gallery</h2>

<p>
    @Html.ActionLink("Upload New Image", "Upload")
</p>
<table>
   @{
       int j = 0;
       for (var i = 0; i < Model.Count(); i += 4)
    {
        j = i;
        <tr>
            @while (j < i + 4 && j < Model.Count())
            {
                <td>
                    <img src="data:image/png;base64,@Convert.ToBase64String(Model[j].ImageData,0,Model[j].ImageData.Length)" height="400" width="600"/>
                </td>
                j++;
            }
        </tr>
    }
   }
</table>
