@model List<Image_Analysis.ImageGallery>

@{
    ViewBag.Title = "Gallery";
}

<h2>Image Gallery</h2>

<p>
    @Html.ActionLink("Upload New Image", "Upload")
</p>
<body>
<table>
    @{
        int j = 0;
        for (var i = 0; i < Model.Count(); i += 4)
        {
            j = i;
            <tr>
                @while (j < i + 6 && j < Model.Count())
                {
                    <td>
                    
                        <a href="@Url.Action("Analize", "ImageGallery" , new {id = Model[j].ImageID})"><img src="data:image/png;base64,@Convert.ToBase64String(Model[j].ImageData, 0, Model[j].ImageData.Length)" height="400"/></a>

                    </td>
                    j++;
                }
            </tr>
        }
    }
</table>
   
</body>
