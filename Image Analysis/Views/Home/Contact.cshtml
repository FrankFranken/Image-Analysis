
@model Image_Analysis.Models.EmailFormModel
@{
    ViewBag.Title = "Contact";
}
<style>
    body {
        background-image: url("../../Content/images/contact.jpg");
        background-repeat: no-repeat;
        background-size: cover;
    }
</style>
<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <center><h3>Please contact us with any questions or concerns</h3></center> 

    
                
                    <div class="form-group">
                        @Html.LabelFor(m => m.FromName, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.FromName, new { @class = "form-control1" })
                            @Html.ValidationMessageFor(m => m.FromName)
                        </div>
                    </div>
                
                    <div class="form-group">
                        @Html.LabelFor(m => m.FromEmail, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.FromEmail, new { @class = "form-control1" })
                            @Html.ValidationMessageFor(m => m.FromEmail)
                        </div>
                    </div>
                
                    <div class="form-group">
                        @Html.LabelFor(m => m.Message, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextAreaFor(m => m.Message, new { @class = "form-control1" })
                            @Html.ValidationMessageFor(m => m.Message)
                        </div>
                    </div>
              
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-2">
                        <input type="submit" class="btn1 btn-default" value="Send" />
                    </div>
                </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}